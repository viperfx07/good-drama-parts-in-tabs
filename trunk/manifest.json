{
  "manifest_version": 2,

  "name": "GoodDrama - Parts In Tabs",
  "description": "No more clicking to the next parts. All parts areloaded into tabs ",
  "version": "1.0",
  "background": {
      "page": "background.html"
   },
  "browser_action": {
      "default_icon": "icon19.png",
      "default_popup": "popup.html"
   },
  "permissions": [
    "http://www.gooddrama.net/"
  ],
  "content_scripts": [ {
      "all_frames": true,
      "css": [  ],
      "js": [ "jquery.min.js", "content_script.js"],
      "matches": [ "http://www.gooddrama.net/*", "https://www.gooddrama.net/*" ]
   }],
   "icons": {
      "128": "icon128.png",
      "19": "icon19.png"
   }
}
